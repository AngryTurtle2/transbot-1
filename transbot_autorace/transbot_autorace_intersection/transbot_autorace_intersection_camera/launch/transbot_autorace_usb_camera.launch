<launch>
  <!-- run usb camera -->
  <node name="camera" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video0" />
    <rosparam command="load" file="$(find transbot_autorace_intersection)/calibration/camera_calibration/camera.yaml" />
    <param name="camera_info_url" value="package://transbot_autorace_intersection/calibration/intrinsic_calibration/camerausb_640x480_30fps.yaml"/>
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="camera" />
    <param name="io_method" value="mmap"/>
  </node>
</launch>
